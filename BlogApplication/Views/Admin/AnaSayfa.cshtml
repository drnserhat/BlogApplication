@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model AnaSayfa
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Ana Sayfa Düzenleme Formu</h5>

        <form asp-controller="Admin" asp-action="AnaSayfa" method="Post" enctype="multipart/form-data">
            <input asp-for="ID" name="ID" class="form-control" type="hidden" />

     @*        <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">Açıklama</label>
                <div class="col-sm-10">
                    <textarea asp-for="" name="Aciklama" class="form-control" style="height: 100px"></textarea>
                </div>
            </div> *@
            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">Başlık</label>
                <div class="col-sm-10">
                    <input asp-for="Baslik" name="Baslik" class="form-control" type="text" />
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">Sol Üst Başlık</label>
                <div class="col-sm-10">
                    <input asp-for="SolUstBaslik" name="SolUstBaslik" class="form-control" type="text" />
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">Alt Baslik</label>
                <div class="col-sm-10">
                    <input asp-for="AltBaslik" name="AltBaslik" class="form-control" type="text" />
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">Fotoğraf</label>
                <div class="col-sm-2">
                    <input  name="file" class="form-control" type="file" multiple />
                </div>
                <div class="col-sm-8">
                    @foreach (var item in (List<Fotograf>)ViewBag.Fotograf)
                    {
                        <img width="100" src="~/@item.FotoUrl" />
                    }
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Kaydet</label>
                <div class="col-sm-10">
                    <input type="submit" class="btn btn-primary" value="Ekle" />
                </div>
            </div>

        </form><!-- End General Form Elements -->

    </div>
</div>