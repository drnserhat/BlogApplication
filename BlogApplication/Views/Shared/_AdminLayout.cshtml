    <script>
        // Sayfadaki tüm "tel" türündeki input alanlarını seçin
        var telInputs = document.querySelectorAll('input[type="tel"]');

        // Her bir input alanı için döngü
        telInputs.forEach(function (telInput) {
            // Input alanında herhangi bir değişiklik olduğunda kontrol etmek için olay ekleyin
            telInput.addEventListener('input', function () {
                // Giriş değerini alın
                var telValue = telInput.value;

                // Sadece sayısal karakterlerin olduğunu kontrol edin
                if (!/^\d*$/.test(telValue)) {
                    telInput.value = telValue.replace(/[^\d]/g, ''); // Sayısal olmayan karakterleri kaldırın
                }
            });
        });

    </script>

