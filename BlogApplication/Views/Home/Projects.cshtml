@model List<Hizmetler>
<section class="inner-intro bg-img light-color overlay-before parallax-background">
	<div class="container">
		<div class="row title">
			<div class="title_row">
				<h1 data-title="Services"><span>Projelerimiz</span></h1>
				<div class="page-breadcrumb">
					<a>Home</a>/ <span>Projelerimiz</span>
				</div>

			</div>

		</div>
	</div>
</section>


<!-- Work Section -->
<section id="work" class="padding ptb-xs-40">
	<div class="container">
		<div class="row text-center">
			<div class="col-lg-6 offset-lg-3 mb-30">
				<div class="heading-box">
					<h2>Projelerimiz</h2>
					<p>Projelerimiz</p>
				</div>

			</div>
		</div>
		<!-- work Filter -->
		<div class="row">
			<div class="col-lg-6 offset-lg-3">
				<ul class="container-filter categories-filter">
					<li>
						<a class="categories active" data-filter="*">Hepsi</a>
					</li>
	
				</ul>
			</div>
		</div>
		<!-- End work Filter -->
		<div class="row container-grid nf-col-3">
			@foreach (var item in Model)
			{
				<div class="nf-item branding coffee spacing">
					<div class="item-box">
						<a> <img alt="1" src="~/@item.FotoUrl" class="item-container"> </a>
						<div class="link-zoom">
							<a asp-action="ProjectDetail" asp-controller="Home" asp-route-id="@item.ID" class="project_links"> <i class="fa fa-link"> </i> </a>
							<a href="~/@item.FotoUrl" class="fancylight" data-fancybox-group="light"> <i class="fa fa-search-plus"></i> </a>
						</div>
						<div class="gallery-heading">
							<h4><a asp-action="ProjectDetail" asp-controller="Home" asp-route-id="@item.ID">@item.HizmetBaslik</a></h4>
							<p>
							@item.HizmetAltBaslik
							</p>
						</div>
					</div>
				</div>
			}



		</div>

	</div>
</section>